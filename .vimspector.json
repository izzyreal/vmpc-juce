{
  "configurations": {
    "lldb": {
      "adapter": {
        "name": "lldb",
        "command": ["/opt/homebrew/opt/llvm/bin/lldb-dap"],
        "env": {"LLDB_LAUNCH_FLAG_LAUNCH_IN_TTY": "NO"}
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "Y",
          "cpp_catch": "Y",
          "objc_throw": "Y",
          "objc_catch": "Y"
        }
      },
      "configuration": {
        "externalConsole": false,
        "name": "Launch",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceRoot}/Debug/vmpc2000xl_artefacts/Debug/Standalone/VMPC2000XL.app/Contents/MacOS/VMPC2000XL",
        "args": [],
        "cwd": "${workspaceRoot}",
        "stopOnEntry": false
      }
    }
  }
}

